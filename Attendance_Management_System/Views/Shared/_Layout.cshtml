<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link async rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    <link async href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link async href="~/Content/font.css" rel="stylesheet" />
    <link href="~/Content/checkbox.css" rel="stylesheet" />
    <link async href="~/Content/Theme.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cabin+Sketch">*@
        @*@Scripts.Render("~/bundles/modernizr")*@
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link async href="~/Content/jquery.timepicker.min.css" rel="stylesheet" />
    <meta name="description" content="@ViewBag.Description" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Attendance Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Attendance", "Index", "Attendance")</li>
                    <li>@Html.ActionLink("Students", "Index", "Student")</li>
                    <li>@Html.ActionLink("Teachers", "Index", "Teacher")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                    <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Upload/Index">Upload Class List</a></li>
                            <li><a href="/Admin/Students">Students</a></li>
                            <li><a href="/Admin/Teachers">Teachers</a></li>
                            <li><a href="/Admin/Classes">Classes</a></li>
                            <li><a href="/Admin/SchoolSchedules">Schedule</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Settings"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings</a></li>
                            <li><a href="/Help"><span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> Help</a></li>
                        </ul>
                    </li>
                    @Html.Raw(User.Identity.IsAuthenticated ? "<li><a href='/user/signout'>Sign Out</a></li>" : "")
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row" style="margin-top:60px;">
            @RenderBody()
        </div>
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>