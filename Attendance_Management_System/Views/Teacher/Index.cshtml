@using Attendance_Management_System.Data.Models
@model Attendance_Management_System.ViewModels.TeachersVM

@{
    ViewBag.Title = "Teachers";
    ViewBag.Description = "View all teachers";
}

<div class="col-md-offset-1 col-md-10">

    <div class="col-md-4 col-md-offset-4">
        <h1 style="font-size: 50px;" class="font">Teachers</h1>
    </div>

    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>Teacher</th>
            <th>Subjects</th>
            <th>Absentees</th>
            <th>Over-all Attendees</th>
        </tr>
        @foreach (var t in Model.Teachers)
        {
            <tr>
                <td>
                    <a href="/Teacher/TeacherRecord?teacherId=@t.TeacherId">@t.Teacher</a>&emsp;
                    <a href="/Teacher/NewTeacherRecord?teacherId=@t.TeacherId">New View</a>
                </td>
                <td>@t.Subjects</td>
                <td>@t.Absentees</td>
                <td>@t.Percentage%</td>
            </tr>
        }
    </table>
</div>